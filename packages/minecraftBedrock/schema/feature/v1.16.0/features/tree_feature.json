			"additionalProperties": false,
			"properties": {
				"trunk_height": {
					"properties": {
						"range_min": {
							"type": "number"
						},
						"range_max": {
							"type": "number"
						}
					}
				},
				"trunk_width": {
					"type": "number"
				},
