{
	"$schema": "http://json-schema.org/draft-07/schema",
	"$id": "bridge.particle",
	"title": "Particle",
	"properties": {
		"format_version": {
			"$ref": "../project/formatVersionEnum.json"
		},
		"particle_effect": {
			"additionalProperties": false,
			"properties": {
				"description": {
					"additionalProperties": false,
					"properties": {
						"identifier": {
							"$ref": "../general/reference/prefixedFileIdentifier.json"
						},
						"basic_render_parameters": {
							"additionalProperties": false,
							"properties": {
								"texture": {
									"$ref": "../general/reference/paths.json#/definitions/particle_texture_paths"
								},
								"material": {
									"$ref": "./general.json#/definitions/materials"
								}
							}
						}
					}
				},
				"curves": {
					"patternProperties": {
						".*": {
							"properties": {
								"type": {
									"type": "string",
									"enum": ["linear", "bezier", "catmull_rom"]
								},
								"nodes": {
									"type": "array",
									"items": {
										"anyOf": [
											{
												"type": "number"
											},
											{
												"$ref": "./general.json#/definitions/variables"
											}
										]
									}
								},
								"input": {
									"$ref": "../molang/embeddedBeta.json"
								},
								"horizontal_range": {
									"$ref": "../molang/embeddedBeta.json"
								}
							}
						}
					}
				},
				"events": {
					"patternProperties": {
						".*": {
							"$ref": "./event.json"
						}
					}
				},
				"components": {
					"$ref": "./components.json"
				}
			}
		}
	}
}
