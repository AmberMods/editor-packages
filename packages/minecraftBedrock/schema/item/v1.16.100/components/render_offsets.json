{
	"$schema": "http://json-schema.org/draft-07/schema",
	"additionalProperties": false,
	"type": "object",
	"description": "The offset of the item rendered in an entity's hand.",
	"propertyNames": {
		"enum": [
			"main_hand",
			"off_hand"
		]
	},
	"patternProperties": {
		".*": {
			"propertyNames": {
				"enum": [
					"first_person",
					"third_person"
				]
			},
			"patternProperties": {
				".*": {
					"properties": {
						"position": {
							"type": "array",
							"minItems": 3,
							"maxItems": 3,
							"items": {
								"type": "number"
							}
						},
						"rotation": {
							"type": "array",
							"minItems": 3,
							"maxItems": 3,
							"items": {
								"type": "number"
							}
						},
						"scale": {
							"type": "array",
							"minItems": 3,
							"maxItems": 3,
							"items": {
								"type": "number"
							}
						}
					}
				}
			}
		}
	}
}