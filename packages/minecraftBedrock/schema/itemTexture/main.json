{
	"$schema": "http://json-schema.org/draft-07/schema",
	"title": "Item Textures",
	"additionalProperties": false,
	"type": "object",
	"properties": {
		"resource_pack_name": {
			"type": "string"
		},
		"texture_name": {
			"const": "atlas.items"
		},
		"texture_data": {
			"patternProperties": {
				".*": {
					"type": "object",
					"properties": {
						"textures": {
							"anyOf": [
								{
									"type": "array",
									"items": {
										"$ref": "../general/reference/paths.json#/definitions/item_texture_paths"
									}
								},
								{
									"$ref": "../general/reference/paths.json#/definitions/item_texture_paths"
								}
							]
						}
					}
				}
			}
		}
	}
}
