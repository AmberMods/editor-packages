{
	"$schema": "http://json-schema.org/draft-07/schema",
	"$id": "bridge.clientAnimation",
	"title": "Client Animation",
	"required": ["format_version"],
	"properties": {
		"format_version": { "enum": ["1.8.0", "1.10.0"] },
		"animations": {
			"patternProperties": {
				"^animation\\..+$": {
					"properties": {
						"animation_length": { "type": "number" },
						"loop": {
							"enum": [true, false, "hold_on_last_frame"]
						},
						"anim_time_update": {
							"$ref": "../molang/embedded.json"
						},
						"blend_weight": {
							"type": "number"
						},
						"override_previous_animation": {
							"type": "boolean"
						},
						"bones": {
							"patternProperties": {
								".*": {
									"properties": {
										"rotation": {
											"anyOf": [
												{
													"type": "array",
													"minItems": 3,
													"maxItems": 3,
													"items": {
														"anyOf": [
															{
																"$ref": "../general/degree.json"
															},
															{
																"$ref": "../molang/embedded.json"
															}
														]
													}
												},
												{
													"patternProperties": {
														"[0-9]+.?[0-9]*": {
															"type": "array",
															"minItems": 3,
															"maxItems": 3,
															"items": {
																"anyOf": [
																	{
																		"$ref": "../general/degree.json"
																	},
																	{
																		"$ref": "../molang/embedded.json"
																	}
																]
															}
														}
													}
												}
											]
										},
										"scale": {
											"anyOf": [
												{
													"type": "array",
													"minItems": 3,
													"maxItems": 3,
													"items": {
														"anyOf": [
															{
																"$ref": "../general/degree.json"
															},
															{
																"$ref": "../molang/embedded.json"
															}
														]
													}
												},
												{
													"patternProperties": {
														"[0-9]+.?[0-9]*": {
															"type": "array",
															"minItems": 3,
															"maxItems": 3,
															"items": {
																"anyOf": [
																	{
																		"$ref": "../general/degree.json"
																	},
																	{
																		"$ref": "../molang/embedded.json"
																	}
																]
															}
														}
													}
												}
											]
										},
										"position": {
											"anyOf": [
												{
													"type": "array",
													"minItems": 3,
													"maxItems": 3,
													"items": {
														"anyOf": [
															{
																"$ref": "../general/degree.json"
															},
															{
																"$ref": "../molang/embedded.json"
															}
														]
													}
												},
												{
													"patternProperties": {
														"[0-9]+.?[0-9]*": {
															"type": "array",
															"minItems": 3,
															"maxItems": 3,
															"items": {
																"anyOf": [
																	{
																		"$ref": "../general/degree.json"
																	},
																	{
																		"$ref": "../molang/embedded.json"
																	}
																]
															}
														}
													}
												}
											]
										}
									}
								}
							}
						},
						"particle_effects": {
							"propertyNames": {
								"pattern": "^\\d+(\\.\\d+)?$"
							},
							"patternProperties": {
								"^\\d+(\\.\\d+)?$": {
									"additionalProperties": false,
									"properties": {
										"effect": {
											"$ref": "../clientEntity/dynamic/particleReferenceEnum.json"
										},
										"locator": {
											"$ref": "../geometry/dynamic/locatorEnum.json"
										}
									}
								}
							}
						},
						"sound_effects": {
							"propertyNames": {
								"pattern": "^\\d+(\\.\\d+)?$"
							},
							"patternProperties": {
								"^\\d+(\\.\\d+)?$": {
									"properties": {
										"effect": {
											"$ref": "../clientEntity/dynamic/soundEffectReferenceEnum.json"
										}
									}
								}
							}
						},
						"timeline": {
							"propertyNames": {
								"pattern": "^\\d+(\\.\\d+)?$"
							},
							"patternProperties": {
								"^\\d+(\\.\\d+)?$": {
									"$ref": "../molang/embedded.json"
								}
							}
						}
					}
				}
			}
		}
	}
}
