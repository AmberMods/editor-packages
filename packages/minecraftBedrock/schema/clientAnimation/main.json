{
	"$schema": "http://json-schema.org/draft-07/schema",
	"title": "Client Animation",
	"required": ["format_version"],
	"definitions": {
		"frame": {
			"anyOf": [
				{
					"type": "array",
					"minItems": 3,
					"maxItems": 3,
					"items": {
						"anyOf": [
							{
								"$ref": "../general/degree.json"
							},
							{
								"$ref": "../molang/embedded.json"
							}
						]
					}
				},
				{
					"type": "object",
					"additionalProperties": false,
					"patternProperties": {
						"[0-9]+.?[0-9]*": {
							"anyOf": [
								{
									"type": "array",
									"minItems": 3,
									"maxItems": 3,
									"items": {
										"anyOf": [
											{
												"$ref": "../general/degree.json"
											},
											{
												"$ref": "../molang/embedded.json"
											}
										]
									}
								},
								{
									"type": "object",
									"additionalProperties": false,
									"properties": {
										"pre": {
											"type": "array",
											"minItems": 3,
											"maxItems": 3,
											"items": {
												"type": "number"
											}
										},
										"post": {
											"type": "array",
											"minItems": 3,
											"maxItems": 3,
											"items": {
												"type": "number"
											}
										},
										"lerp_mode": {
											"type": "string",
											"enum": ["catmullrom", "linear"]
										}
									}
								},
								{
									"$ref": "../molang/embedded.json"
								}
							]
						}
					}
				}
			]
		}
	},
	"type": "object",
	"properties": {
		"format_version": { "enum": ["1.8.0", "1.10.0"] },
		"animations": {
			"type": "object",
			"additionalProperties": false,
			"patternProperties": {
				"^animation\\..+$": {
					"type": "object",
					"properties": {
						"animation_length": { "type": "number" },
						"start_delay": { "$ref": "../molang/embedded.json" },
						"loop": {
							"enum": [true, false, "hold_on_last_frame"]
						},
						"loop_delay": { "$ref": "../molang/embedded.json" },
						"anim_time_update": {
							"$ref": "../molang/embedded.json"
						},
						"blend_weight": {
							"type": "number"
						},
						"override_previous_animation": {
							"type": "boolean"
						},
						"bones": {
							"type": "object",
							"patternProperties": {
								".*": {
									"type": "object",
									"properties": {
										"rotation": {
											"$ref": "#/definitions/frame"
										},
										"scale": {
											"$ref": "#/definitions/frame"
										},
										"position": {
											"$ref": "#/definitions/frame"
										}
									}
								}
							}
						},
						"particle_effects": {
							"propertyNames": {
								"pattern": "^\\d+(\\.\\d+)?$"
							},
							"patternProperties": {
								"^\\d+(\\.\\d+)?$": {
									"additionalProperties": false,
									"required": ["effect"],
									"type": "object",
									"properties": {
										"effect": {
											"$ref": "../clientEntity/dynamic/particleReferenceEnum.json"
										},
										"locator": {
											"$ref": "../geometry/dynamic/locatorEnum.json"
										},
										"pre_effect_script": {
											"$ref": "../molang/embedded.json"
										},
										"bind_to_actor": {
											"type": "boolean"
										}
									}
								}
							}
						},
						"sound_effects": {
							"propertyNames": {
								"pattern": "^\\d+(\\.\\d+)?$"
							},
							"patternProperties": {
								"^\\d+(\\.\\d+)?$": {
									"type": "object",
									"properties": {
										"effect": {
											"$ref": "../clientEntity/dynamic/soundEffectReferenceEnum.json"
										}
									}
								}
							}
						},
						"timeline": {
							"propertyNames": {
								"pattern": "^\\d+(\\.\\d+)?$"
							},
							"patternProperties": {
								"^\\d+(\\.\\d+)?$": {
									"$ref": "../molang/embedded.json"
								}
							}
						}
					}
				}
			}
		}
	}
}
