{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "additionalProperties": false,
    "description": "The entity detects the nearest player within 'sniffing_radius' and updates its 'minecraft:suspect_tracking' component state.",
    "properties": {
        "priority": { "$ref": "../../general/behaviorPriority.json" },
        "cooldown_range": {
            "description": "Cooldown range between sniffs in seconds.",
            "anyOf": [
                {
                    "type": "number"
                },
                {
                    "type": "array",
                    "minItems": 2,
                    "maxItems": 2,
                    "items": {
                        "type": "number"
                    }
                }
            ]
        },
        "duration": {
            "description": "Sniffing duration in seconds.",
            "type": "number"
        },
        "sniffing_radius": {
            "description": "Player detection radius.",
            "type": "number"
        },
        "suspicion_radius": {
            "description": "Player suspicion radius. When a player is within this radius, the anger level towards that player is increased.",
            "type": "number"
        }
    }
}