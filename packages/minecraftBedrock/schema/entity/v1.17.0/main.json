{
	"$schema": "http://json-schema.org/draft-07/schema",
	"properties": {
		"minecraft:entity": {
			"required": ["description"],
			"type": "object",
			"allOf": [
				{
					"properties": {
						"description": {
							"$ref": "./description.json"
						},
						"components": {
							"$ref": "./components.json"
						},
						"component_groups": {
							"anyOf": [
								{
									"patternProperties": {
										".*": {
											"$ref": "./components.json"
										}
									}
								},
								{
									"$ref": "../../project/projectPrefix.json"
								}
							]
						},
						"events": {
							"type": "object",
							"anyOf": [
								{
									"$ref": "../dynamic/currentContext/eventReferenceProperty.json"
								},
								{
									"$ref": "../general/builtInEvent.json"
								},
								{
									"$ref": "../../project/projectPrefix.json"
								},
								{
									"patternProperties": {
										".*": {
											"$ref": "./event.json"
										}
									}
								}
							]
						},
						"do_not_upgrade": {}
					}
				},
				{
					"$ref": "../../project/experimentalGameplay/upcomingCreatorFeatures.json",
					"then": {
						"properties": {
							"permutations": {
								"type": "array",
								"items": {
									"type": "object",
									"properties": {
										"condition": {
											"$ref": "/data/packages/minecraftBedrock/schema/molang/embeddedBeta.json"
										},
										"components": {
											"$ref": "/data/packages/minecraftBedrock/schema/entity/v1.17.0/components.json"
										}
									}
								}
							}
						}
					}
				}
			]
		}
	}
}
