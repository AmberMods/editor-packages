{
	"$schema": "http://json-schema.org/draft-07/schema",
	"properties": {
		"minecraft:entity": {
			"required": ["description"],
			"type": "object",
			"properties": {
				"description": {
					"$ref": "../v1.17.0/description.json"
				},
				"permutations": {
					"type": "array",
					"items": {
						"type": "object",
						"properties": {
							"condition": {
								"$ref": "../../molang/embeddedBeta.json"
							},
							"components": {
								"$ref": "./components.json"
							}
						}
					}
				},
				"components": {
					"$ref": "./components.json"
				},
				"component_groups": {
					"patternProperties": {
						".*": {
							"$ref": "./components.json"
						}
					}
				},
				"events": {
					"type": "object",
					"anyOf": [
						{
							"$ref": "../dynamic/currentContext/eventReferenceProperty.json"
						},
						{
							"$ref": "../general/builtInEvent.json"
						},
						{
							"patternProperties": {
								".*": {
									"$ref": "./event.json"
								}
							}
						}
					]
				},
				"do_not_upgrade": {}
			}
		}
	}
}
