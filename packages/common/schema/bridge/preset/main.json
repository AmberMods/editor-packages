{
	"$schema": "http://json-schema.org/draft-07/schema",
	"title": "Preset Manifest",
	"additionalProperties": false,
	"type": "object",
	"properties": {
		"name": {
			"description": "Name to display inside the preset window.",
			"type": "string"
		},
		"description": {
			"description": "Preset description.",
			"type": "string"
		},
		"icon": {
			"title": "http://materialdesignicons.com/",
			"description": "Icon to show inside of the preset window",
			"pattern": "^mdi-",
			"type": "string"
		},
		"category": {
			"type": "string"
		},
		"requires": {
			"description": "Preset requirements.",
			"$ref": "../requires.json"
		},
		"additionalModels": {
			"type": "object"
		},
		"showIfDisabled": {
			"type": "boolean"
		},
		"fields": {
			"type": "array",
			"items": {
				"type": "array",
				"minItems": 2,
				"maxItems": 3,
				"items": [
					{
						"type": "string",
						"description": "Name of the input."
					},
					{
						"type": "string",
						"description": "Variable for the input value."
					},
					{
						"type": "object",
						"properties": {
							"type": {
								"description": "Type of input.",
								"type": "string",
								"enum": [
									"fileInput",
									"numberInput",
									"textInput",
									"switch",
									"selectInput"
								]
							},
							"default": {
								"description": "Default value for the input.",
								"type": ["string", "boolean", "number", "integer"]
							},
							"optional": {
								"type": "boolean",
								"description": "Whether or not the input is optional."
							}
						},
						"allOf": [
							{
								"if": {
									"properties": {
										"type": {
											"const": "numberInput"
										}
									}
								},
								"then": {
									"type": "object",
									"properties": {
										"min": {
											"type": "number"
										},
										"max": {
											"type": "number"
										},
										"step": {
											"type": "number"
										}
									}
								}
							},
							{
								"if": {
									"properties": {
										"type": {
											"const": "fileInput"
										}
									}
								},
								"then": {
									"type": "object",
									"properties": {
										"accept": {
											"type": "string"
										},
										"icon": {
											"type": "string"
										},
										"multiple": {
											"type": "boolean"
										}
									}
								}
							},
							{
								"if": {
									"properties": {
										"type": {
											"const": "selectInput"
										}
									}
								},
								"then": {
									"type": "object",
									"properties": {
										"options": {
											"type": "array",
											"items": {
												"type": "string"
											}
										}
									}
								}
							}
						]
					}
				]
			}
		},
		"createFiles": {
			"type": "array",
			"items": {
				"anyOf": [
					{
						"type": "array",
						"minItems": 2,
						"maxItems": 3,
						"items": [
							{
								"type": "string",
								"description": "File name in the preset folder to create."
							},
							{
								"type": "string",
								"description": "Sets the file path, relative to the project's folder, of where to create the file"
							},
							{
								"description": "Options",
								"type": "object",
								"properties": {
									"inject": {
										"type": "array",
										"items": {
											"description": "Variable name defined under fields to inject into the file and file path.",
											"type": "string"
										}
									},
									"openFile": {
										"type": "boolean",
										"description": "Whether to open the file on preset creation."
									}
								}
							}
						]
					},
					{
						"type": "string"
					}
				]
			}
		},
		"expandFiles": {
			"type": "array",
			"items": {
				"type": "array",
				"minItems": 2,
				"maxItems": 3,
				"items": [
					{
						"type": "string",
						"description": "File name in the preset folder to be merged with the target path."
					},
					{
						"type": "string",
						"description": "Sets the file path, relative to the project's folder, of the file to add to."
					},
					{
						"description": "Options",
						"type": "object",
						"properties": {
							"inject": {
								"type": "array",
								"items": {
									"description": "Variable name defined under fields to inject into the file and file path.",
									"type": "string"
								}
							},
							"openFile": {
								"type": "boolean",
								"description": "Whether to open the file on preset creation."
							}
						}
					}
				]
			}
		}
	}
}
